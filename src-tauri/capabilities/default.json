{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    "fs:allow-read",
    "fs:allow-exists",
    "fs:allow-stat",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    "dialog:allow-ask",
    "dialog:allow-confirm",
    "shell:default",
    "shell:allow-open",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "**" }
      ]
    }
  ]
}
